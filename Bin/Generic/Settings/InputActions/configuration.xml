				<parameter name="control" value="down"/>
				<parameter name="threshold" value="0.5"/>			
			</input>
		</pad>	
	</event>
	
	<event name="validate">
		<keyboard>
			<input name="just_pressed">
				<parameter name="control" value="return"/>
				<parameter name="threshold" value="0.5"/>
			</input>
		</keyboard>
	
		<pad>
			<input name="just_pressed">
				<parameter name="control" value="a"/>
				<parameter name="threshold" value="0.5"/>			
			</input>
		</pad>		
	</event>
	
	<event name="back">
