<configuration>
	<event name="left">
		<keyboard>
			<input name="pressed">
				<parameter name="control" value="left"/>
				<parameter name="threshold" value="0.5"/>
			</input>
		</keyboard>
	
		<pad>
			<input name="pressed">
				<parameter name="control" value="left"/>
				<parameter name="threshold" value="0.5"/>			
			</input>
		</pad>
	</event>
	
	<event name="right">
		<keyboard>
			<input name="pressed">
				<parameter name="control" value="right"/>
				<parameter name="threshold" value="0.5"/>
			</input>
		</keyboard>
	
		<pad>
			<input name="pressed">
				<parameter name="control" value="right"/>
				<parameter name="threshold" value="0.5"/>			
			</input>
		</pad>
	</event>
	
	<event name="up">
		<keyboard>
			<input name="pressed">
				<parameter name="control" value="up"/>
				<parameter name="threshold" value="0.5"/>
			</input>
		</keyboard>
	
		<pad>
			<input name="pressed">
				<parameter name="control" value="up"/>
				<parameter name="threshold" value="0.5"/>			
			</input>
		</pad>	
